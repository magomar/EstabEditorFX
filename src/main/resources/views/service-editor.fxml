<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.deludobellico.commandops.estabeditor.controller.ServiceEditorController">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox>
                    <children>
                        <Label alignment="TOP_LEFT" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" text="Name">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="name" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <TabPane minWidth="470.0" style="-fx-border-color: grey; -fx-background-color: e9e9e9; -fx-border-radius: 5;" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab text="General">
                            <content>
                                <VBox>
                                    <children>
                                        <HBox>
                                            <children>
                                                <Label alignment="TOP_LEFT" contentDisplay="CENTER" prefWidth="80.0" text="Description" />
                                                <TextArea fx:id="description" prefHeight="200.0" />
                                            </children>
                                        </HBox>
                              <HBox prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <Label prefWidth="80.0" text="Ranks" />
                                    <ListView fx:id="rankListView" prefHeight="400.0" prefWidth="200.0" />
                                    <Button fx:id="addRankButton" mnemonicParsing="false" onAction="#addRankAction">
                                       <graphic>
                                          <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../images/copy.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                    </Button>
                                    <Button fx:id="removeRankButton" mnemonicParsing="false" onAction="#removeRankAction">
                                       <graphic>
                                          <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../images/remove.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                    </Button>
                                    <VBox>
                                       <children>
                                          <HBox>
                                             <children>
                                                <Label text="Icon Colors" />
                                             </children>
                                          </HBox>
                                          <HBox>
                                             <children>
                                                <Label prefWidth="120.0" text="Background color" />
                                                <ColorPicker fx:id="backgroudColorPicker" promptText="Background color" />
                                             </children>
                                          </HBox>
                                          <HBox>
                                             <children>
                                                <Label prefWidth="120.0" text="Dark Backg. color" />
                                                <ColorPicker fx:id="darkBackgColorPicker" promptText="Background color" />
                                             </children>
                                          </HBox>
                                          <HBox>
                                             <children>
                                                <Label prefWidth="120.0" text="Light Backg. color" />
                                                <ColorPicker fx:id="lightBackgColorPicker" promptText="Background color" />
                                             </children>
                                          </HBox>
                                          <HBox>
                                             <children>
                                                <Label prefWidth="120.0" text="Designation color" />
                                                <ColorPicker fx:id="designationColorPicker" promptText="Background color" />
                                             </children>
                                          </HBox>
                                          <HBox>
                                             <children>
                                                <Label prefWidth="120.0" text="Symbol color" />
                                                <ComboBox fx:id="symbolColorComboBox" prefWidth="150.0" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>

                                        <HBox prefHeight="100.0" prefWidth="200.0">
                                            <children>
                                                <VBox prefHeight="200.0" prefWidth="100.0">
                                                    <children>
                                                        <Label text="Large Insignia" />
                                                        <fx:include fx:id="largeInsigniaPanel" source="element-image.fxml" />
                                                    </children>
                                                </VBox>
                                                <VBox prefHeight="200.0" prefWidth="100.0">
                                                    <children>
                                                        <Label text="Small Insignia" />
                                                        <fx:include fx:id="smallInsigniaPanel" source="element-image.fxml" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
