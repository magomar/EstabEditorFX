<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" style="-fx-background-color: e9e9e9;" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.deludobellico.commandops.estabeditor.view.ElementSearchDialog">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" AnchorPane.bottomAnchor="10.0"
              AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="20.0">
            <children>
                <HBox prefWidth="200.0" spacing="10.0">
                    <children>
                        <TextField fx:id="searchType" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0"
                                   HBox.hgrow="NEVER"/>
                        <TextField fx:id="searchName" HBox.hgrow="ALWAYS"/>
                        <Button mnemonicParsing="false" onAction="#searchAction" text="Search"
                                HBox.hgrow="NEVER"/>
                    </children>
                </HBox>
                <TableView fx:id="searchTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="typeColumn" maxWidth="150.0" minWidth="150.0" prefWidth="150.0"
                                     text="Type"/>
                        <TableColumn fx:id="nameColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0"
                                     prefWidth="-1.0" text="Name"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <HBox nodeOrientation="RIGHT_TO_LEFT" prefWidth="200.0" spacing="15.0">
                    <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity"
                                maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#cancelButtonAction" prefWidth="100.0" text="Cancel"/>
                        <Button fx:id="addButton" disable="true" maxHeight="-Infinity" maxWidth="-Infinity"
                                minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#addButtonAction" prefWidth="100.0" text="Select"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
