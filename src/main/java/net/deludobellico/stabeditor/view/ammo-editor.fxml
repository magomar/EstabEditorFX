<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="ammoEditor" xmlns="http://javafx.com/javafx/8"
           fx:controller="net.deludobellico.stabeditor.controller.AmmoEditorController">
    <children>
        <VBox prefHeight="430.0" prefWidth="700.0">
            <children>
                <HBox>
                    <children>
                        <Label text="Name">
                            <HBox.margin>
                                <Insets right="5.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="name"/>
                    </children>
                </HBox>
                <HBox prefHeight="87.0">
                    <children>
                        <TextArea fx:id="description" text="" wrapText="true">
                            <HBox.margin>
                                <Insets top="5.0"/>
                            </HBox.margin>
                        </TextArea>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <CheckBox mnemonicParsing="false" selected="true" text="No image">
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                </CheckBox>
                                <Button mnemonicParsing="false" text="Open"/>
                                <TextField prefHeight="25.0" prefWidth="133.0"/>
                            </children>
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </VBox>
                        <ImageView fitHeight="48.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/images/no-image.png"/>
                            </image>
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
                <GridPane maxWidth="400.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Weight (kg)" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets right="5.0"/>
                            </GridPane.margin>
                        </Label>

                        <Label text="Quantity">
                            <GridPane.margin>
                                <Insets right="5.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="quantity" editable="true" GridPane.columnIndex="1"/>
                        <TextField fx:id="weight" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </GridPane>
            </children>
            <StackPane.margin>
                <Insets left="20.0" top="15.0"/>
            </StackPane.margin>
        </VBox>
    </children>
</StackPane>
